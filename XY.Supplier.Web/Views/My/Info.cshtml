@model XY.Supplier.Web.Models.My.Info_Model

@{
    Layout = "~/Views/Shared/Normal.cshtml";
}

<script type="text/javascript">
    //<![CDATA[

    require(['jquery', 'xyvalid', 'boss'], function ($, v, boss) {
        $(function () {
            var _form = $('form:first');
            _form.xyvInit();

            //提交
            $('#Submit').on('click', function () {
                if (_form.xyvValid()) {
                    boss.submit(_form);
                }
            });

        });
    });

    //]]>
</script>

<form method="post" action="/my/info_update">

    <div class="container-fluid">
        <div class="card">
            <div class="card-header b">个人资料</div>
            <div class="card-body">

                <div class="row justify-content-center mt1r mb05r">
                    <div class="col-xl-1 pt0375r">
                        <span class="fl mr025r gray">姓名</span>
                        <span class="fl red b pt0125r">*</span>
                    </div>
                    <div class="col-xl-9">
                        <input type="text" id="Name" name="Name" value="" maxlength="16" class="form-control form-control-sm w90p"
                               xy-required="true" xy-title="请输入姓名！" />
                    </div>
                </div>

                <div class="row justify-content-center mb05r">
                    <div class="col-xl-1 pt0375r gray">手机号</div>
                    <div class="col-xl-9">
                        <input id="Mobile" name="Mobile" value="" maxlength="16" class="form-control form-control-sm w90p" />
                    </div>
                </div>

                <div class="row justify-content-center mb1r">
                    <div class="col-xl-1"></div>
                    <div class="col-xl-9">
                        <button id="Submit" type="button" class="btn btn-sm btn-warning fl pl3r pr3r mr05r">
                            <i class="fa fa-check" aria-hidden="true"></i>
                            <span>提交</span>
                        </button>
                    </div>
                </div>

            </div>
        </div>
    </div>

</form>